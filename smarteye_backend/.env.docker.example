# SmartEye Backend - Docker Environment Configuration

# Django Settings
DEBUG=False
SECRET_KEY=change-me-in-production-use-a-long-random-string
DJANGO_SETTINGS_MODULE=smarteye.settings.production
ALLOWED_HOSTS=localhost,127.0.0.1,web,0.0.0.0

# Database Configuration (PostgreSQL)
DATABASE_NAME=smarteye_db
DATABASE_USER=smarteye_user
DATABASE_PASSWORD=secure_password_change_me
DATABASE_HOST=db
DATABASE_PORT=5432

# Redis Configuration
REDIS_URL=redis://:@redis:6379/0
REDIS_PASSWORD=
REDIS_PORT=6379

# Celery Configuration
CELERY_BROKER_URL=redis://:@redis:6379/0
CELERY_RESULT_BACKEND=redis://:@redis:6379/1

# OpenAI API (Required for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# File Upload & Media Settings
MAX_UPLOAD_SIZE=100MB
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# Web Server Configuration
WEB_PORT=8000

# Container Ports
DATABASE_PORT=5432
NGINX_PORT=80
NGINX_SSL_PORT=443
FLOWER_PORT=5555

# Monitoring (Flower)
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Superuser Creation (Optional)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@smarteye.com
DJANGO_SUPERUSER_PASSWORD=admin123

# Logging
LOG_LEVEL=INFO

# Application-specific Settings
SMARTEYE_MAX_WORKERS=2
SMARTEYE_BATCH_SIZE=2
SMARTEYE_MEMORY_LIMIT_MB=500