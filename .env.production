# ==============================================================================
# SmartEye v0.4 - 프로덕션 환경 통합 설정
# ==============================================================================

# === 데이터베이스 설정 ===
POSTGRES_DB=smarteye_db
POSTGRES_USER=smarteye
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-smarteye_password}
DB_USERNAME=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}
DB_URL=jdbc:postgresql://postgres:5432/${POSTGRES_DB}

# === 외부 서비스 URL ===
LAM_SERVICE_URL=http://lam-service:8001
LAM_SERVICE_ENABLED=true

# === API 키 (환경변수에서 주입) ===
# OPENAI_API_KEY=${OPENAI_API_KEY}

# === 파일 저장소 설정 ===
UPLOAD_DIR=/app/uploads
TEMP_DIR=/app/temp
STATIC_DIR=/app/static

# === OCR 설정 ===
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_DATAPATH=/usr/share/tessdata

# === 보안 설정 - CORS (프로덕션용 제한) ===
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# === 로깅 설정 (프로덕션 최적화) ===
SQL_LOGGING_LEVEL=WARN
SQL_BINDING_LOGGING=WARN
ROOT_LOGGING_LEVEL=INFO

# === 성능 설정 (프로덕션 최적화) ===
MAX_THREADS=400
MIN_SPARE_THREADS=20
CONNECTION_TIMEOUT=30000

# === 데이터베이스 풀 설정 (프로덕션 최적화) ===
DB_POOL_SIZE=20
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# === React 프론트엔드 설정 (프로덕션) ===
REACT_APP_API_URL=/api
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=production
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_SUPPORTED_FORMATS=image/jpeg,image/jpg,image/png,image/gif
GENERATE_SOURCEMAP=false

# === 모니터링 설정 ===
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,prometheus,metrics
MANAGEMENT_ENDPOINT_PROMETHEUS_ENABLED=true
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true