# SmartEye LAM Service 환경 설정
# 이 파일을 .env로 복사하여 사용하세요

# 서버 설정
LAM_HOST=0.0.0.0
LAM_PORT=8081
LAM_DEBUG=false

# 모델 설정
LAM_MODEL_CHOICE=docstructbench         # docstructbench, doclaynet, docsynth300k, SmartEyeSsen 중 선택
LAM_MODEL_CACHE_DIR=/app/models
LAM_CONFIDENCE_THRESHOLD=0.5
LAM_MAX_IMAGE_SIZE=4096

# GPU 설정
LAM_USE_GPU=false
LAM_GPU_DEVICE=0

# 파일 시스템 설정
LAM_TEMP_DIR=/tmp/smarteye-lam
LAM_MAX_FILE_SIZE=10485760

# 로깅 설정
LAM_LOG_LEVEL=INFO
# LAM_LOG_FILE=/app/logs/lam.log

# 성능 설정
LAM_MAX_CONCURRENT_REQUESTS=10
LAM_REQUEST_TIMEOUT=30

# 허깅페이스 설정 (필요시)
# HUGGINGFACE_HUB_TOKEN=your_token_here
