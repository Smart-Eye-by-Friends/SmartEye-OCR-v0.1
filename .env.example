# SmartEye Backend Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
SMARTEYE_APP_NAME="SmartEye OCR API"
SMARTEYE_DEBUG=false
SMARTEYE_VERSION="0.1.0"

# Server Settings
SMARTEYE_HOST="0.0.0.0"
SMARTEYE_PORT=8000

# OpenAI API (Required for figure/table analysis)
SMARTEYE_OPENAI_API_KEY=""

# Model Settings
SMARTEYE_DEFAULT_MODEL="docstructbench"
SMARTEYE_CONFIDENCE_THRESHOLD=0.25
SMARTEYE_DEVICE="auto"

# Memory Management
SMARTEYE_MEMORY_WARNING_THRESHOLD=0.8
SMARTEYE_MEMORY_CRITICAL_THRESHOLD=0.9
SMARTEYE_BATCH_SIZE_COLAB=2
SMARTEYE_BATCH_SIZE_LOCAL=4

# Redis (Optional - for caching and task queue)
SMARTEYE_REDIS_URL="redis://localhost:6379"
SMARTEYE_TASK_TIMEOUT=3600

# PostgreSQL (Optional - for result storage)
SMARTEYE_DATABASE_URL=""

# File Upload Settings
SMARTEYE_MAX_FILE_SIZE=52428800  # 50MB
SMARTEYE_UPLOAD_DIR="/tmp/smarteye_uploads"

# Logging
SMARTEYE_LOG_LEVEL="INFO"

# OCR Settings
SMARTEYE_TESSERACT_CONFIG="--oem 3 --psm 6"