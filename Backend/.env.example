# SmartEye Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5433/smarteye_db
DB_USERNAME=smarteye
DB_PASSWORD=your_secure_password_here

# External Services
LAM_SERVICE_URL=http://localhost:8001
LAM_SERVICE_ENABLED=true

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# File Storage
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
STATIC_DIR=./static

# Tesseract OCR
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_DATAPATH=tessdata

# Security Settings - CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Logging Levels (development: DEBUG, production: WARN)
SQL_LOGGING_LEVEL=WARN
SQL_BINDING_LOGGING=WARN
ROOT_LOGGING_LEVEL=INFO

# Performance Settings
MAX_THREADS=200
MIN_SPARE_THREADS=10
CONNECTION_TIMEOUT=20000

# Database Pool Settings
DB_POOL_SIZE=10
DB_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=300000