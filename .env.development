# ==============================================================================
# SmartEye v0.4 - 개발 환경 통합 설정
# ==============================================================================

# === 데이터베이스 설정 ===
POSTGRES_DB=smarteye_db
POSTGRES_USER=smarteye
POSTGRES_PASSWORD=smarteye_password
DB_USERNAME=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}
DB_URL=jdbc:postgresql://localhost:5433/${POSTGRES_DB}

# === 외부 서비스 URL ===
LAM_SERVICE_URL=http://localhost:8001
LAM_SERVICE_ENABLED=true

# === API 키 (실제 운영시에는 별도 관리 필요) ===
# OPENAI_API_KEY=your_openai_api_key_here

# === 파일 저장소 설정 ===
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
STATIC_DIR=./static

# === OCR 설정 ===
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_DATAPATH=tessdata

# === 보안 설정 - CORS ===
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# === 로깅 설정 ===
SQL_LOGGING_LEVEL=DEBUG
SQL_BINDING_LOGGING=DEBUG
ROOT_LOGGING_LEVEL=INFO

# === 성능 설정 ===
MAX_THREADS=200
MIN_SPARE_THREADS=10
CONNECTION_TIMEOUT=20000

# === 데이터베이스 풀 설정 ===
DB_POOL_SIZE=10
DB_MIN_IDLE=2
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=300000

# === React 프론트엔드 설정 ===
REACT_APP_API_URL=http://localhost:8080
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=development
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_SUPPORTED_FORMATS=image/jpeg,image/jpg,image/png,image/gif

# === 모니터링 설정 ===
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,prometheus,metrics
MANAGEMENT_ENDPOINT_PROMETHEUS_ENABLED=true
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true